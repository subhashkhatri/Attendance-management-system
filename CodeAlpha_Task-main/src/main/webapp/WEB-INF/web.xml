<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>org.example.Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adminpage</servlet-name>
        <servlet-class>org.example.Controller.AddUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminpage</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>takeAttendance</servlet-name>
        <servlet-class>org.example.Controller.AttendanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>takeAttendance</servlet-name>
        <url-pattern>/markAttendance</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckAttendance</servlet-name>
        <servlet-class>org.example.Controller.AttendanceCheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckAttendance</servlet-name>
        <url-pattern>/checkatt</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>viewAttendanceServlet</servlet-name>
        <servlet-class>org.example.Controller.ViewAttendanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewAttendanceServlet</servlet-name>
        <url-pattern>/viewAttendanceServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editAttendance</servlet-name>
        <servlet-class>org.example.Controller.EditAttendanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editAttendance</servlet-name>
        <url-pattern>/editAttendance</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SaveAttendance</servlet-name>
        <servlet-class>org.example.Controller.SaveAttendanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveAttendance</servlet-name>
        <url-pattern>/SaveAttendance</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Back</servlet-name>
        <servlet-class>org.example.Controller.BackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Back</servlet-name>
        <url-pattern>/back</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>org.example.Controller.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adminverify</servlet-name>
        <servlet-class>org.example.Controller.AdminVerifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminverify</servlet-name>
        <url-pattern>/adminverify</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addCourse</servlet-name>
        <servlet-class>org.example.Controller.AddCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addCourse</servlet-name>
        <url-pattern>/addCourse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>removeCourse</servlet-name>
        <servlet-class>org.example.Controller.RemoveCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeCourse</servlet-name>
        <url-pattern>/removeCourse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>assignCourse</servlet-name>
        <servlet-class>org.example.Controller.AssignCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>assignCourse</servlet-name>
        <url-pattern>/assignCourse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>unassignCourse</servlet-name>
        <servlet-class>org.example.Controller.UnassignCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>unassignCourse</servlet-name>
        <url-pattern>/unassignCourse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>viewClasses</servlet-name>
        <servlet-class>org.example.Controller.ViewClassesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewClasses</servlet-name>
        <url-pattern>/viewClasses</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
